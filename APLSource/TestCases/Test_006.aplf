 path←∆GetTestFolderInTemp 1⊃⎕SI
 zipFilename←path,'/MyZipFile.zip'
 myZip←⎕NEW ##.DotNetZip(,⊂zipFilename)

 →T.GoToTidyUp myZip.filename≢F.NormalizePath zipFilename

 :Trap 0
     myZip.filename←'Hello'
     →T.GoToTidyUp 1
 :Else
     qdmx←⎕DMX
     →T.GoToTidyUp 2≠qdmx.EN
 :EndTrap

 r←T._OK

∆TidyUp:
 myZip.Dispose
