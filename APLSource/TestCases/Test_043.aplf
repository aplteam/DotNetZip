 path←∆GetTestFolderInTemp 1⊃⎕SI
 F.MkDir path,'/src'
 F.MkDir path,'/unzipped'
 (F.ExpandPath'./TestData\level-1-a.txt')F.CopyTo path,'/src/'
 (F.ExpandPath'./TestData\level-1-b.txt')F.CopyTo path,'/src/'
 F.MkDir src2←path,'/src/subfolder1/subfolder2'
